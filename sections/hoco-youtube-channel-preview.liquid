{% stylesheet %}
  
.youtube-preview.section {
  background: #13171a;
  padding: 20px 0;
}
@media (min-width: 768px) {
  .youtube-preview.section {
    padding: 100px 0;
  }
}
.youtube-preview.section ul {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 30px;
  align-items:center;
}
.youtube-preview.section ul li h1, .youtube-preview.section ul li p {
  color: #fff;
}

.yt-subscribe {
  padding-top: 10px;
  display: grid;
  grid-template-columns: 95px 1fr;
  grid-template-rows: repeat(2, 1fr);
  grid-column-gap: 8px;
  grid-row-gap: 8px;
  align-items:center;
  width: fit-content;
}
.yt-subscribe div:nth-child(1) {
  grid-area: 1 / 1 / 3 / 2;
}
.yt-subscribe div:nth-child(2) {
  grid-area: 1 / 2 / 2 / 3;
}
.yt-subscribe div:nth-child(2) p {
  margin-bottom: 0;
}
  .yt-subscribe div:nth-child(3) {
  grid-area: 2 / 2 / 3 / 3; 
}
.yt-subscribe img {
  width: 80px;
}
.youtube-preview.section ul li a {
    display: flex;
    width: fit-content;
    align-items: center;
}
.youtube-preview.section ul li a svg {
    width: 24px;
    margin-right: 11px;
}
@media (max-width: 1402px) {
  .youtube-preview.section ul li.yt-wrapper:last-child {
    display: none;
  }
}
.youtube-preview.section ul li.yt-wrapper {
  position: relative;
  padding-bottom: 56.25%;
  /* 16:9 */
  padding-top: 25px;
  height: 0;
}

.youtube-preview.section ul li iframe {
    position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  }
  
{% endstylesheet %}



