                {%- else -%}
                  {%- render 'icons' type : "whats-app" -%}
                {%- endif -%}
                <span class="">{{ settings.chat_acco_title1 }}
                  {%- if settings.chat_acco_content1 != blank -%}
                    {%- render 'icons' type : "down-arrow" -%}
                  {%- endif -%}
                </span>
                {%- if settings.chat_acco_content1 != blank -%}
