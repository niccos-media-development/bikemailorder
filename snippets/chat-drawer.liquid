      {%- if settings.chat_heading != blank -%}
        <h2 class="h5 mb-0">{{ settings.chat_heading }}</h2>
      {%- endif -%}
      {%- if settings.chat_sub_heading != blank -%}
        <p class="mb-0">{{ settings.chat_sub_heading }}</p>
      {%- endif -%}
